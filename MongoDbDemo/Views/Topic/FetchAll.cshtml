@model MongoDbDemo.Models.Dtos.TopicsData
@using MongoDbDemo.Models.Dtos

@{
    ViewBag.Title = "FetchAll";
}

<h2>Topics</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().WrittenOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Likes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Topics)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @{
                    var link = @item.Link;
                }
                <a href=@item.Link target="_blank">@item.Title</a>
            </td>
            <td>
                @Html.ActionLink(@item.Author, "Details","Author", new { name = @item.Author },null)
            </td>
            <td>
                @{
                    var date = item.WrittenOn.ToShortDateString();
                }
                @date
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                @Html.ActionLink("Like", "Like", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<b><label>Group by demonstration</label></b>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorStats.FirstOrDefault().Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorStats.FirstOrDefault().Likes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AuthorStats)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
        </tr>
    }

</table>
